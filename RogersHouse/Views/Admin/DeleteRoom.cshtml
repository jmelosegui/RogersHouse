@model RogerHouse.Domain.Entities.Room
@{
    ViewBag.Title = "Roger's House: Delete Room (" + Model.Name + ")";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h2>
    Delete Room</h2>
<h3>
    Are you sure you want to delete this room and all related photos?</h3>
<fieldset>
    <legend>Room</legend>
    <div class="display-label">
        Name</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Name)
    </div>
    <div class="display-label">
        Price</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Price)
    </div>
    <div class="display-label">
        PriceDescription</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.PriceDescription)
    </div>
    <div class="display-label">
        Size</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Size)
    </div>
    <div class="display-label">
        Description</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Description)
    </div>
</fieldset>
@using (Html.BeginForm())
{
    <p>
        @Html.HiddenFor(model => model.RoomId)
        <input type="submit" value="Delete" />
        |
        @Html.ActionLink("Back to List", "Rooms")
    </p>
}
